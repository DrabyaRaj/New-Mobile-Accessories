<h3 id="totalAmount">Total Amount: $0.00</h3>
<button id="checkoutBtn">Checkout</button>

<script>
    function loadCartItems() {
        const cartItems = JSON.parse(localStorage.getItem('cartItems')) || [];
        const cartItemsContainer = document.getElementById('cartItems');
        cartItemsContainer.innerHTML = '';
        let totalAmount = 0;

        if (cartItems.length === 0) {
            const row = document.createElement('tr');
            row.innerHTML = `<td colspan="5" style="text-align:center;">No items in cart.</td>`;
            cartItemsContainer.appendChild(row);
            return;
        }

        cartItems.forEach(item => {
            const totalPrice = item.price * item.quantity;
            totalAmount += totalPrice;

            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${item.name}</td>
                <td>$${item.price.toFixed(2)}</td>
                <td>${item.quantity}</td>
                <td>$${totalPrice.toFixed(2)}</td>
                <td><button onclick="removeFromCart(${item.id})">Remove</button></td>
            `;
            cartItemsContainer.appendChild(row);
        });

        document.getElementById('totalAmount').innerText = `Total Amount: $${totalAmount.toFixed(2)}`;
    }

    function removeFromCart(productId) {
        let cart = JSON.parse(localStorage.getItem('cartItems')) || [];
        cart = cart.filter(item => item.id !== productId);
        localStorage.setItem('cartItems', JSON.stringify(cart));
        loadCartItems(); // Refresh the cart display
    }

    document.getElementById('checkoutBtn').addEventListener('click', () => {
        if (confirm('Are you sure you want to proceed to checkout?')) {
            // Redirect to the checkout page
            window.location.href = '/Checked-Out'; // Replace with your checkout page URL
        }
    });

    // Load cart items when the page loads
    window.onload = loadCartItems;
</script>
    <script src="script.js"></script>
