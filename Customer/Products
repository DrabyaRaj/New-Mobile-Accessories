    <div class="container">
        <h1 style="text-align: center;">Product List</h1>
        <div id="productList" class="product-grid">
            <!-- Product cards will be inserted here -->
        </div>
    </div>

    <script>
        // Load products from local storage
        function loadProducts() {
            const products = JSON.parse(localStorage.getItem('products')) || [];
            const productList = document.getElementById('productList');
            productList.innerHTML = ''; // Clear existing products

            products.forEach((product, index) => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <h3>${product.name}</h3>
                    <img src="${product.image}" alt="${product.name}">
                    <p>Price: $${product.price}</p>
                    <button onclick="promptQuantity(${index})">Add to Cart</button>
                `;
                productList.appendChild(productCard);
            });
        }

        // Prompt user for quantity when adding to cart
        function promptQuantity(index) {
            const products = JSON.parse(localStorage.getItem('products')) || [];
            const product = products[index];

            // Prompt user for quantity
            const quantity = prompt(`Enter quantity for ${product.name}:`, 1);
            const quantityNumber = parseInt(quantity, 10);

            if (isNaN(quantityNumber) || quantityNumber <= 0) {
                alert('Please enter a valid quantity.');
                return;
            }

            // Here you would typically add the product to a cart array in local storage
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            const existingItem = cart.find(item => item.name === product.name);

            if (existingItem) {
                existingItem.quantity += quantityNumber; // Update quantity if already in cart
            } else {
                cart.push({ ...product, quantity: quantityNumber }); // Add new item to cart
            }

            localStorage.setItem('cart', JSON.stringify(cart)); // Save cart to local storage
            alert(`${quantityNumber} of ${product.name} added to cart!`);
        }

        // Load products on page load
        loadProducts();
    </script>
    <script src="script.js"></script>
