<body>
    
    <p>Please take a screenshot for proof</p>
    <div class="container">
        <h1>Thank You for Your Purchase!</h1>
        <div id="checkoutItems">
            <!-- Checked-out items will be inserted here -->
        </div>
        <div class="total" id="totalAmount"></div>
        <div class="received-info">
            <p><strong>Received Date:</strong> <span id="receivedDate"></span></p>
            <p><strong>Email:</strong> <span id="buyerEmail"></span></p>
        </div>
    </div>

    <script>
        // Load purchased items from local storage
        function loadCheckedOut() {
            const cart = JSON.parse(localStorage.getItem('cart')) || [];
            const buyerEmail = localStorage.getItem('buyerEmail') || 'Not provided';
            const receivedDate = new Date().toLocaleDateString();
            const checkoutItemsDiv = document.getElementById('checkoutItems');
            const totalAmountDiv = document.getElementById('totalAmount');
            let totalAmount = 0;

            checkoutItemsDiv.innerHTML = ''; // Clear existing items

            if (cart.length === 0) {
                checkoutItemsDiv.innerHTML = '<p>No items purchased.</p>';
                totalAmountDiv.innerText = '';
                return;
            }

            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                totalAmount += itemTotal;
                const checkoutItemDiv = document.createElement('div');
                checkoutItemDiv.className = 'checkout-item';
                checkoutItemDiv.innerHTML = `
                    <span>${item.name} (x${item.quantity})</span>
                    <span>$${itemTotal}</span>
                `;
                checkoutItemsDiv.appendChild(checkoutItemDiv);
            });

            totalAmountDiv.innerText = `Total Amount: $${totalAmount}`;
            document.getElementById('receivedDate').innerText = receivedDate;
            document.getElementById('buyerEmail').innerText = buyerEmail;

            // Optionally clear the cart after checkout
            localStorage.removeItem('cart');
        }

        // Load checked-out items on page load
        loadCheckedOut();
    </script>
</body>
</html>
